#include <iostream>

#include "Config.hpp"
#include "Device.hpp"
#include "AppServer.hpp"
#include "BoardServer.hpp"
#include "Utils.hpp"

using namespace std;

int main(int argc, char **argv)
{
    CommandLine cli;
    cli.parseCmdline(argc, argv);

    Config config(NV_APP_SERVER);
    config.parseFile("../../../configs/boards/+");
        
    Board *board = new BoardServer();
    AppServer appServer(config, board, cli);

    cout << config.toString() << endl;

//    appServer.readWkdIbeMatertials(cli.getWkdSubFile());
    Utils::readRsaKey(cli.getRsaPrivateKey(), KeyDistRSA::getPrivateKey());
    Utils::readRsaKey(cli.getRsaPublicKey(), KeyDistRSA::getPublicKey());

    appServer.run();
}
