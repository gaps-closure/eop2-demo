#pragma once

#include "Config.hpp"
#include "Device.hpp"
#include "ProvisionCL.hpp"

extern Col cols[];

using namespace std;

class Provision
{
private:
    ProvisionCL &cli;
    Config &config;

    Params params;
    SecretKey encryptSK;
    SecretKey signSK;
    MasterKey msk;

public:
    Provision(ProvisionCL &cli, Config &config) :
        cli(cli),
        config(config)
    {
    }

    void wkdInit();
    void genHeader(bool isPublisher, const string &outDir);
    void genWkd(ofstream &fs, const string &deviceID);
    void writeWkd(ofstream &fs, const Params& params,
                  const URIPath& uriPath, const TimePath& timePath);

    void genDeviceJson();
    void genDeviceCsv();
    void genDeviceDB();
    void genDevice(Device &device);
    void gen();

    void importJson();
    void importCsv();
    void import();

    void run();
};
